// Place your key bindings in this file to overwrite the defaults
[
    {
        "key": "ALT+LEFT",
        "command": "workbench.action.previousEditor"
    },
    {
        "key": "ALT+RIGHT",
        "command": "workbench.action.nextEditor"
    },
    {
        "key": "ESCAPE",
        "command": "workbench.action.closePanel",
        "when": "!editorTextFocus"
    },
    {
        "when": "!editorTextFocus && sidebarVisible && filesExplorerFocus",
        "key": "CTRL+Q",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "CTRL+E C",
        "command": "closeMarkersNavigation"
    },
    {
        "key": "ctrl+1",
        "command": "-workbench.action.focusFirstEditorGroup"
    },
    {
        "key": "CTRL+W CTRL+L",
        "command": "workbench.action.focusNextGroup"
    },
    {
        "key": "CTRL+W L",
        "command": "workbench.action.focusNextGroup"
    },
    {
        "key": "CTRL+W SHIFT+L",
        "command": "workbench.action.focusSideBar",
    },
    {
        "key": "CTRL+W CTRL+H",
        "command": "workbench.action.focusPreviousGroup"
    },
    {
        "key": "CTRL+W H",
        "command": "workbench.action.focusPreviousGroup"
    },
    {
        "key": "CTRL+W K",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
    {
        "key": "CTRL+W J",
        "command": "workbench.action.terminal.focus"
    },
    {
        "key": "CTRL+W C",
        "command": "workbench.action.closeEditorsInGroup"
    },
    // File explorer shortcuts
    {
        "key": "CTRL+C",
        "command": "explorer.newFile",
        "when": "filesExplorerFocus"
    },
    {
        "key": "CTRL+N",
        "command": "explorer.newFolder",
        "when": "filesExplorerFocus"
    },
    {
        "key": "CTRL+D",
        "command": "moveFileToTrash",
        "when": "filesExplorerFocus"
    },
    {
        "key": "CTRL+R",
        "command": "renameFile",
        "when": "filesExplorerFocus"
    },
    // Global keybidings that use CTRL+SPACE as <leader> key to emulate
    // the spacemacs keybindings defined in the vim extension settings.
    // These can be used as a replacement on widgets/windows where the
    // vim extension keyboard shortcuts don't work (e.g. code UI widgets)
    {
        "key": "CTRL+SPACE B D",
        "command": "workbench.action.closeActiveEditor",
        "when": "!editorTextFocus"
    }
]