// Place your settings in this file to overwrite the default settings
{
    "editor.fontFamily": "Ubuntu Mono",
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.lineNumbers": "relative",
    "editor.renderWhitespace": "all",
    "editor.renderLineHighlight": "gutter",
    "editor.roundedSelection": false,
    "editor.rulers": [
        79
    ],
    "update.channel": "none",
    "explorer.openEditors.visible": 0,
    "files.trimTrailingWhitespace": true,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "window.menuBarVisibility": "hidden",
    "workbench.colorTheme": "Solarized Light",
    "workbench.editor.showTabs": true,
    "workbench.editor.enablePreview": false,
    "workbench.sideBar.location": "right",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "qub-xml-vscode.telemetry.enabled": false,
    "terminal.integrated.commandsToSkipShell": [
        "editor.action.toggleTabFocusMode",
        "workbench.action.debug.continue",
        "workbench.action.debug.pause",
        "workbench.action.debug.restart",
        "workbench.action.debug.run",
        "workbench.action.debug.start",
        "workbench.action.debug.stop",
        "workbench.action.focusActiveEditorGroup",
        "workbench.action.focusFirstEditorGroup",
        "workbench.action.focusSecondEditorGroup",
        "workbench.action.focusThirdEditorGroup",
        "workbench.action.navigateDown",
        "workbench.action.navigateLeft",
        "workbench.action.navigateRight",
        "workbench.action.navigateUp",
        "workbench.action.openNextRecentlyUsedEditorInGroup",
        "workbench.action.openPreviousRecentlyUsedEditorInGroup",
        "workbench.action.quickOpen",
        "workbench.action.quickOpenPreviousEditor",
        "workbench.action.quickOpenView",
        "workbench.action.showCommands",
        "workbench.action.tasks.build",
        "workbench.action.tasks.restartTask",
        "workbench.action.tasks.runTask",
        "workbench.action.tasks.showLog",
        "workbench.action.tasks.showTasks",
        "workbench.action.tasks.terminate",
        "workbench.action.tasks.test",
        "workbench.action.terminal.clear",
        "workbench.action.terminal.copySelection",
        "workbench.action.terminal.deleteWordLeft",
        "workbench.action.terminal.deleteWordRight",
        "workbench.action.terminal.findWidget.history.showNext",
        "workbench.action.terminal.findWidget.history.showPrevious",
        "workbench.action.terminal.focus",
        "workbench.action.terminal.focusAtIndex1",
        "workbench.action.terminal.focusAtIndex2",
        "workbench.action.terminal.focusAtIndex3",
        "workbench.action.terminal.focusAtIndex4",
        "workbench.action.terminal.focusAtIndex5",
        "workbench.action.terminal.focusAtIndex6",
        "workbench.action.terminal.focusAtIndex7",
        "workbench.action.terminal.focusAtIndex8",
        "workbench.action.terminal.focusAtIndex9",
        "workbench.action.terminal.focusFindWidget",
        "workbench.action.terminal.focusNext",
        "workbench.action.terminal.focusPrevious",
        "workbench.action.terminal.hideFindWidget",
        "workbench.action.terminal.kill",
        "workbench.action.terminal.new",
        "workbench.action.terminal.paste",
        "workbench.action.terminal.runActiveFile",
        "workbench.action.terminal.runSelectedText",
        "workbench.action.terminal.scrollDown",
        "workbench.action.terminal.scrollDownPage",
        "workbench.action.terminal.scrollToBottom",
        "workbench.action.terminal.scrollToTop",
        "workbench.action.terminal.scrollUp",
        "workbench.action.terminal.scrollUpPage",
        "workbench.action.terminal.selectAll",
        "workbench.action.terminal.toggleTerminal",
        "workbench.action.togglePanel"
    ],
    // Vim settings
    "vim.easymotion": true,
    "vim.easymotionMarkerFontFamily": "Ubuntu Mono",
    "vim.easymotionMarkerBackgroundColor": "#555555",
    "vim.highlightedyank.enable": true,
    "vim.substituteGlobalFlag": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.visualstar": true,
    // Spacemacs keybindings
    "vim.leader": "<space>",
    "vim.insertModeKeyBindings": [
        {
            "before": ["f", "j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": ["<tab>"],
            "commands": ["editor.action.reindentselectedlines"]
        },
        {
            "before": ["<leader>", "g", "s"],
            "commands": ["git.stageSelectedRanges"],
            "after": ["<esc>"]
        },
        {
            "before": ["v"],
            "commands": ["editor.action.smartSelect.grow"],
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<tab>"],
            "commands": ["editor.action.reindentselectedlines"]
        },
        // Taken from https://github.com/VSpaceCode/VSpaceCode/blob/master/settings.json
        {
            "before": ["<leader>", "<space>"],
            "commands": ["workbench.action.showCommands"],
        },
        {
            "before": ["<leader>", ":"],
            "commands": ["vim.showQuickpickCmdLine"],
        },
        {
            "before": ["<leader>", "w", "z"],
            "commands": ["workbench.action.toggleZenMode"],
        },
        {
            "before": ["<leader>", "<tab>"],
            "commands": ["workbench.action.openNextRecentlyUsedEditorInGroup"],
        },
        {
            "before": ["<leader>", "1"],
            "commands": ["workbench.action.focusFirstEditorGroup"],
        },
        {
            "before": ["<leader>", "2"],
            "commands": ["workbench.action.focusSecondEditorGroup"],
        },
        {
            "before": ["<leader>", "3"],
            "commands": ["workbench.action.focusThirdEditorGroup"],
        },
        {
            "before": ["<leader>", "b", "b"],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["<leader>", "b", "d"],
            "commands": ["workbench.action.closeActiveEditor"]
        },
        {
            "before": ["<leader>", "b", "n"],
            "commands": ["workbench.action.nextEditor"]
        },
        {
            "before": ["<leader>", "b", "p"],
            "commands": ["workbench.action.previousEditor"]
        },
        {
            "before": ["<leader>", "f", "f"],
            "commands": ["workbench.action.files.openFile"]
        },
        {
            "before": ["<leader>", "f", "r"],
            "commands": ["workbench.action.openRecent"]
        },
        {
            "before": ["<leader>", "f", "s"],
            "commands": ["workbench.action.files.save"]
        },
        {
            "before": ["<leader>", "f", "t"],
            "commands": ["workbench.view.explorer"]
        },
        {
            "before": ["<leader>", "g", "s"],
            "commands": ["workbench.view.scm"]
        },
        {
            "before": ["<leader>", "l", "d"],
            "commands": ["workbench.action.closeFolder"]
        },
        {
            "before": ["<leader>", "p", "f"],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["<leader>", "p", "l"],
            "commands": ["workbench.action.files.openFolder"]
        },
        {
            "before": ["<leader>", "p", "p"],
            "commands": ["workbench.action.openRecent"]
        },
        {
            "before": ["<leader>", "q", "f"],
            "commands": ["workbench.action.closeWindow"]
        },
        {
            "before": ["<leader>", "q", "q"],
            "commands": ["workbench.action.closeWindow"]
        },
        // "Windows" (editorGroups) management commands, spacemacs-style
        {
            "before": ["<leader>", "w", "w"],
            "commands": ["workbench.action.focusNextGroup"]
        },
        {
            "before": ["<leader>", "w", "W"],
            "commands": ["workbench.action.focusPreviousGroup"]
        },
        {
            "before": ["<leader>", "w", "m"],
            "commands": ["workbench.action.minimizeOtherEditors"]
        },
        {
            "before": ["<leader>", "w", "="],
            "commands": ["workbench.action.evenEditorWidths"]
        },
        {
            "before": ["<leader>", "w", "l"],
            "commands": ["workbench.action.focusRightGroup"]
        },
        {
            "before": ["<leader>", "w", "h"],
            "commands": ["workbench.action.focusLeftGroup"]
        },
        {
            "before": ["<leader>", "w", "k"],
            "commands": ["workbench.action.focusAboveGroup"]
        },
        {
            "before": ["<leader>", "w", "j"],
            "commands": ["workbench.action.focusBelowGroup"]
        },
        {
            "before": ["<leader>", "w", "/"],
            "commands": ["workbench.action.splitEditor"]
        },
        {
            "before": ["<leader>", "w", "-"],
            "commands": ["workbench.action.splitEditorDown"]
        },
        {
            "before": ["<leader>", "w", "s"],
            "commands": ["workbench.action.toggleSidebarVisibility"]
        },
        {
            "before": ["<leader>", "w", "d"],
            "commands": ["workbench.action.joinTwoGroups"]
        },
        {
            "before": ["<leader>", "s", "j"],
            "commands": ["workbench.action.gotoSymbol"]
        },
        {
            "before": ["<leader>", "c", "l"],
            "commands": ["editor.action.commentLine"]
        },
        {
            "before": ["<leader>", "t", "w"],
            "commands": ["editor.action.toggleRenderWhitespace"]
        },
        {
            "before": ["<leader>", "f", "t"],
            "commands": ["workbench.files.action.showActiveFileInExplorer"]
        },
        {
            "before": ["<leader>", "e", "p"],
            "commands": ["editor.action.marker.prev"]
        },
        {
            "before": ["<leader>", "e", "n"],
            "commands": ["editor.action.marker.next"]
        },
        {
            "before": ["<leader>", "e", "c"],
            "commands": ["closeMarkersNavigation"]
        },
        {
            "before": ["<leader>", "h"],
            "commands": ["editor.action.showHover"]
        },
        {
            "before": ["<leader>", "e", "l"],
            "commands": ["workbench.action.showErrorsWarnings"]
        }
    ],
    "window.zoomLevel": 0,
    "extensions.autoUpdate": false,
    "explorer.confirmDelete": false,
    "eslint.packageManager": "yarn",
    "workbench.startupEditor": "newUntitledFile",
    "editor.fontLigatures": true,
    "python.pythonPath": "/usr/bin/python3",
    "npm.enableScriptExplorer": true,
    "extensions.ignoreRecommendations": true,
    "[xml]": {},
    "breadcrumbs.enabled": true,
    "diffEditor.renderSideBySide": false,
    "workbench.editor.revealIfOpen": true,
    "editor.codeLens": false,
    "window.newWindowDimensions": "inherit"
}