	"vim.cmdLineInitialColon": true,
	"vim.easymotion": true,
	"vim.easymotionMarkerFontFamily": "Ubuntu Mono",
	"vim.easymotionMarkerBackgroundColor": "#555555",
	"vim.substituteGlobalFlag": true,
	"vim.visualstar": true,
